name "hairetsu"
description "Cross-platform text layouting library"
authors "Luna"
copyright "Copyright Â© 2025, Luna"
license "BSL-1.0"

dependency "numem" version=">=1.0.5"
dependency "numem:hookset-libc" version="*"
dependency "nulib" version=">=0.2.7"
dependency "intel-intrinsics" version="1.12.0" default=false optional=true

stringImportPaths "res/"
targetPath "out/"

copyFiles "LICENSE"

buildOptions "debugInfoC"

configuration "static" {
    targetType "staticLibrary"
}

configuration "dynamic" {
    targetType "staticLibrary"
}

configuration "unittest" {
    dependency "silly" version="*"
    dependency "numem:hookset-libc" version="*"
}